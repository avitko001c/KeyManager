{% extends "account/base.html" %}

{% load i18n %}
{% load bootstrap %}

{% block body_class %}account account-profile{% endblock %}

{% block head_title %}{% trans "Edit Profile" %}{% endblock %}

{% block content %}
    <form method="POST" action="{% url "account_profile" %}">
        <legend>{% trans "Edit Profile" %}</legend>
        {% csrf_token %}
	{{ bootstrap|user_form.as_p }}
	{{ bootstrap|profile_form.as_p }}
        <div class="form-actions">
            <button>{% trans "Save" %}</button>
        </div>
    </form>
{% endblock %}
